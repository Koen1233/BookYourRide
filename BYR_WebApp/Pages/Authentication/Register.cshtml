@page
@model BYR_WebApp.Pages.Authentication.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2 class="text-center">
    Welcome new user!
</h2><br>
<p class="text-center">
    Register by creating an account for the Book Your Ride app
</p>

<div class="text-center">

    <form method="post">

        <div asp-validation-summary="All" class="text-danger"></div> @*dubbelop*@

        <div class="form-group">
            <label asp-for="CustomerModel.FirstName" class="control-label"></label>
            <input asp-for="CustomerModel.FirstName" class="form-control" />
            <span asp-validation-for="CustomerModel.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerModel.LastName" class="control-label"></label>
            <input asp-for="CustomerModel.LastName" class="form-control" />
            <span asp-validation-for="CustomerModel.LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CustomerModel.Email" class="control-label"></label>
            <input asp-for="CustomerModel.Email" class="form-control" />
            <span asp-validation-for="CustomerModel.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerModel.Password" class="control-label"></label>
            <input asp-for="CustomerModel.Password" type="password" class="form-control" />
            <span asp-validation-for="CustomerModel.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerModel.ConfirmPassword" class="control-label"></label>
            <input asp-for="CustomerModel.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="CustomerModel.ConfirmPassword" class="text-danger"></span>
        </div> <br /><br />

        <input type="submit" class="btn btn-primary" value="Register">

        <a class="btn btn-danger" asp-page="/Index">Cancel</a>

    </form>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}